generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  cars     Car[]   
}

model Car {
  id        String   @id @default(uuid())
  brand     String
  model     String
  year      Int
  price     Float
  imageUrl  String
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String
}
